{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    },
    "include": [
      "src/**/*",
      "api/**/*",                
    ],
    "exclude": ["node_modules", "tests/**/*"]
}
